<div class='page'>
  {{#with header}}
    <div class='header'>

      <header class='header_content'>

        <div class='header_block'>
          <img
            src='/svg/apple.svg'
            alt='Apple'
            class='header_icon'
          />

          <nav class='header_block'>
            {{#each links}}

              <a
                href='{{url}}'
                class='header_link'
              >{{text}}</a>

            {{/each}}
          </nav>
        </div>

        <div class='header_block'>
          <img
            src='/svg/search.svg'
            alt='Search'
            class='header_icon'
          />
          <img
            src='/svg/profile.svg'
            alt='Profile'
            class='header_icon'
          />
        </div>

      </header>

    </div>

    <div class='hug'>
      {{#with ad}}
        <span class='hug_title'>{{title}}</span>

        {{#with link}}
          <a href='{{url}}' class='hug_shop'>{{text}}
            <img
              class='hug_img'
              src='/svg/vector.svg'
              alt='Vector'
            /></a>
        {{/with}}
      {{/with}}
    </div>
  {{/with}}

  {{#with iphone_pro}}
    <section
      class='product product_big product--iphone-pro product_dark product_top'
    >
      <div class='product_content'>
        <h1 class='product_title'>{{title}}</h1>
        <p class='product_description'>{{descriptions}}</p>
        <div class='product_action'>
          {{#with link}}
            {{#each text}}
              <a
                href='../link'
                class='product_link'
              >{{this}}</a>
            {{/each}}
